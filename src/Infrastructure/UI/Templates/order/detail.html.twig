{# @var \SfCQRSDemo\Model\Product\ProductView order #}
{% extends 'base.html.twig' %}

{% block title product.name %}

{% block body %}
    <div class="product-detail row mb-3">
        <div class="col-md-4">
            <img src="{{ product.defaultImage }}" class="rounded float-left img-thumbnail" alt="{{ product.name }}">
        </div>
        <div class="col-md-8">
            <h1>{{ product.name }}</h1>
            <h2>{{ product.price }}&euro;</h2>
            <p>{{ product.description|nl2br }}</p>
            <div>
                <a href="{{ path('product_update', {id: product.id}) }}" class="btn btn-primary">
                    <i class="fa fa-edit"></i> {{ 'edit'|trans }}
                </a>

                <a href="{{ path('product_add_image', {id: product.id}) }}" class="btn btn-secondary">
                    <i class="fa fa-edit"></i> {{ 'uploaded_images'|trans }}
                </a>
            </div>
        </div>
    </div>

    {% if product.images|slice(1)|length %}
        <h2>{{ 'product_images'|trans }}</h2>

        {% include 'order/images_list.html.twig' with {images: product.images|slice(1)} %}
    {% endif %}
{% endblock %}
